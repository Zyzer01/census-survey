generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HouseholdMember {
  id              Int         @id @default(autoincrement()) @unique
  houseHoldId     String      @default(uuid())
  firstName       String
  lastName        String
  phoneNumber     Int         @default(0)
  ethnicityCode   Ethnicity
  sexCode         Sex
  age             Int
  respondent      Boolean     @default(false)
  relationshipCode Relationship
  maritalStatus   MaritalStatus
  spouseName      String
  fathersName     String
  mothersName     String
  schoolAttendance  Boolean
  educationLevel  EducationLevel
  employmentStatus EmploymentStatus
  headOfHousehold  Boolean
  hohFirstName    String
  hohLastName     String
  positionInHousehold CodePosition

  /// @HideField({ input: true, output: false })
  createdAt                 DateTime  @default(now()) @db.Timestamptz
  /// @HideField({ input: true, output: false })
  updatedAt                 DateTime  @updatedAt @db.Timestamptz

  @@map("household_members")
}

enum Ethnicity {
  IGBO
  YORUBA
  HAUSA
  OTHER
}

enum Sex {
  MALE
  FEMALE
}

enum Relationship {
  HUSBAND
  WIFE
  CHILD
  EXTENDED_FAMILY
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
}

enum EducationLevel {
  PRIMARY
  SECONDARY
  TERTIARY
}

enum EmploymentStatus {
  STUDENT
  UNEMPLOYED
  EMPLOYED
  SELF_EMPLOYED
}

enum CodePosition {
  HEAD
  SPOUSE
  CHILD
  OTHER
}
